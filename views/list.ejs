<%- include('header') -%>

<!-- BOX HEADER -->
<div class="box" id="heading">
	<h1><%= listTitle %> List</h1>
</div>
<!-- ITEMS -->
<div class="box">
	<% for(i=0; i < newListItem.length; i++) { %>
	<div class="item">
		<input type="checkbox" />
		<p><%= newListItem[i] %></p>
	</div>
	<% } %>
	<!-- INPUT -->
	<form class="item" action="/" method="post">
		<input
			type="text"
			name="newItem"
			placeholder="New Item"
			autocomplete="off"
		/>
		<button type="submit" name="list" value="<%= listTitle %>">+</button>
	</form>
</div>

<%- include('footer') -%>
